{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2021-10-01-preview",
            "properties": {
                "displayName": "Azure DevOps Administrator Group Monitoring",
                "description": "This detection monitors for additions to projects or project collection administration groups in an Azure DevOps Organization.",
                "severity": "Medium",
                "enabled": false,
                "query": "// Change to true to monitor for Project Administrator adds to *any* project\nlet MonitorAllProjects = false;\n// If MonitorAllProjects is false, trigger only on Project Administrator add for the following projects\nlet ProjectsToMonitor = dynamic(['<project_X>','<project_Y>']);\nAzureDevOpsAuditing\n| where Area == \"Group\" and OperationName == \"Group.UpdateGroupMembership.Add\"\n| where Details has 'Administrators'\n| where Details has \"was added as a member of group\" and (Details endswith '\\\\Project Administrators' or Details endswith '\\\\Project Collection Administrators')\n| parse Details with AddedIdentity ' was added as a member of group [' EntityName ']\\\\' GroupName\n| extend Level = iif(GroupName == 'Project Collection Administrators', 'Organization', 'Project'), AddedIdentityId = Data.MemberId\n| extend Severity = iif(Level == 'Organization', 'High', 'Medium'), AlertDetails = strcat('At ', TimeGenerated, ' UTC ', ActorUPN, '/', ActorDisplayName, ' added ', AddedIdentity, ' to the ', EntityName, ' ', Level)\n| where MonitorAllProjects == true or EntityName in (ProjectsToMonitor) or Level == 'Organization'\n| project TimeGenerated, Severity, Adder = ActorUPN, AddedIdentity, AddedIdentityId, AlertDetails, Level, EntityName, GroupName, ActorAuthType = AuthenticationMechanism, \n  ActorIpAddress = IpAddress, ActorUserAgent = UserAgent, RawDetails = Details\n| extend timestamp = TimeGenerated, AccountCustomEntity = Adder, IPCustomEntity = ActorIpAddress",
                "queryFrequency": "P1D",
                "queryPeriod": "P14D",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "P1D",
                "suppressionEnabled": true,
                "tactics": [
                    "Persistence"
                ],
                "techniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": true,
                        "reopenClosedIncident": true,
                        "lookbackDuration": "P7D",
                        "matchingMethod": "selected",
                        "groupByEntities": [
                            "Account",
                            "IP"
                        ],
                        "groupByAlertDetails": [
                            "Severity"
                        ],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": {
                    "alertDisplayNameFormat": "Alert From unknows",
                    "alertDescriptionFormat": "Alert Description Format",
                    "alertTacticsColumnName": "Adder",
                    "alertSeverityColumnName": null
                },
                "customDetails": {
                    "test": "RawDetails"
                },
                "entityMappings": [
                    {
                        "entityType": "Account",
                        "fieldMappings": [
                            {
                                "identifier": "FullName",
                                "columnName": "AccountCustomEntity"
                            }
                        ]
                    },
                    {
                        "entityType": "IP",
                        "fieldMappings": [
                            {
                                "identifier": "Address",
                                "columnName": "IPCustomEntity"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null
            }
        },
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d/actions/abf00fb4c5b04a2e871c3efb8a594827')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/050618f5-dde4-4d35-b1ea-bf65ffbdba2d/abf00fb4c5b04a2e871c3efb8a594827')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules/actions",
            "apiVersion": "2021-10-01-preview",
            "properties": {
                "ruleId": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]",
                "triggerUri": "[listCallbackURL(concat('/subscriptions/1c4767b1-2a41-41da-8273-b5ec9fca09df/resourceGroups/nf-rdk-development/providers/Microsoft.Logic/workflows/get-subscriptionowner','/triggers/When_a_response_to_an_Azure_Sentinel_alert_is_triggered'),'2016-06-01').value]",
                "logicAppResourceId": "/subscriptions/1c4767b1-2a41-41da-8273-b5ec9fca09df/resourceGroups/nf-rdk-development/providers/Microsoft.Logic/workflows/get-subscriptionowner",
                "operatesOn": "Alert"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]"
            ]
        },
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d/actions/309b13bb12d7452c9d3210ddac8e9210')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/050618f5-dde4-4d35-b1ea-bf65ffbdba2d/309b13bb12d7452c9d3210ddac8e9210')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules/actions",
            "apiVersion": "2021-10-01-preview",
            "properties": {
                "ruleId": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]",
                "triggerUri": "[listCallbackURL(concat('/subscriptions/1c4767b1-2a41-41da-8273-b5ec9fca09df/resourceGroups/nf-rdk-devground/providers/Microsoft.Logic/workflows/Get-GeoFromIpAndTagIncident','/triggers/When_a_response_to_an_Azure_Sentinel_alert_is_triggered'),'2016-06-01').value]",
                "logicAppResourceId": "/subscriptions/1c4767b1-2a41-41da-8273-b5ec9fca09df/resourceGroups/nf-rdk-devground/providers/Microsoft.Logic/workflows/Get-GeoFromIpAndTagIncident",
                "operatesOn": "Alert"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/050618f5-dde4-4d35-b1ea-bf65ffbdba2d')]"
            ]
        }
    ]
}